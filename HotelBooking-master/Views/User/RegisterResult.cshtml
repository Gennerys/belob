
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Register Result</title>
	<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
	<script src="~/lib/JqueryUI/jquery-ui.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>


	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/JqueryUI/jquery-ui.css" />
	<link rel="stylesheet" href="~/lib/JqueryUI/theme.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
	<link rel="stylesheet" href="~/lib/css/styles.css" />
	<link rel=" stylesheet" href="~/Chart.js/Chart.css" />

	<style>
		body {
			background-image: url('/lib/images/GettyImages-1069396514.jpg');
			background-size: cover;
			margin: 0;
			padding: 0;
			min-height: 100vh;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.register__container {
			display: flex;
			flex-direction: column;
			justify-content: flex-start;
			align-items: center;
		}

		.registertext {
			font-size: 70px;
			color: #50C878;
		}

		.btn__back {
			font-weight: 700;
			color: white;
			text-decoration: none;
			padding: .8em 1em calc(.8em + 3px);
			border-radius: 3px;
			background: rgb(64,199,129);
			box-shadow: 0 -3px rgb(53,167,110) inset;
			transition: 0.2s;
		}

			.btn__back:hover {
				background: rgb(53, 167, 110);
			}

			.btn__back:active {
				background: rgb(33,147,90);
				box-shadow: 0 3px rgb(33,147,90) inset;
			}
	</style>
</head>
<body>
	
	<div class="register__container">
		<div class="registertext">
			@{ string txt = ViewData["result"] as string;}
			@txt
		</div>
		<div>
			<a class="btn btn-warning btn-outline-dark btn-lg" asp-action="Login">Back</a>
		</div>
	</div>
</body>
</html>
